{
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declarationMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "es2019",
    "outDir": "dist",
    "rootDir": ".",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "lib": [
      "es2019"
    ],
    "experimentalDecorators": true,
    "newLine": "LF"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules/**",
    "**/*.d.ts"
  ]
}